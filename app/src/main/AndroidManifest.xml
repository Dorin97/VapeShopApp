<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ipleiria.pt.amsi.vapeshop">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" /> <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CompanyHomePage"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".CompanyRegister"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".CompanyMenu" />
        <activity
            android:name=".HomePage"
            android:label="@string/title_home" />
        <activity
            android:name=".Produto"
            android:label="@string/title_activity_product" />
        <activity
            android:name=".Profile"
            android:label="@string/title_activity_profile" />
        <activity
            android:name=".Vapers"
            android:label="@string/title_activity_vapers" />
        <activity
            android:name=".Eliquids"
            android:label="@string/title_activity_liquids" />
        <activity
            android:name=".Customizables"
            android:label="@string/title_activity_costumizables" />
        <activity
            android:name=".Cart"
            android:label="@string/title_activity_cart" />
    </application>

</manifest>